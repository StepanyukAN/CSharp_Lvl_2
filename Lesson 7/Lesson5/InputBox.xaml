        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson5"
        mc:Ignorable="d"
        Title="InputBox" Height="200" Width="350">
    <Grid>
        <TextBox x:Name="txtDepartment" Height="35"  TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="281" Margin="36,54,25,84" FontSize="20"/>
        <Label Content="Введите название отдела" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" FontSize="20" Height="44" Margin="51,10,41,119"/>
        <Button x:Name="OKButton" Content="OK" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Margin="110,111,112,21" FontSize="20" Height="42" Click="OKButton_Click" />

    </Grid>
</Window>
